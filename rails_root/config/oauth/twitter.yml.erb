<%
    key, secret = File.open(File.join(Rails.root, "config", "oauth", "twitter_oauth.config")){|f| f.read}.split(":").map(&:strip)
%>
development: &development
   key:    "<%= key %>"
   secret: "<%= secret %>"
   url:    "http://1.HourFor.me"
   callback: "http://localhost:3000/callbacks/twitter"

test:
   <<: *development

production:
   <<: *development
   callback: "http://1.HourFor.me/callbacks/twitter"