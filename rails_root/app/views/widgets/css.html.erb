.ohfy-widget {
	width: 220px;
	height: 214px;
	font-family: cursive;
	color: #FFFFFF;
	text-shadow: 0 0 3px black;
	background-color: #333333;
	background-image: url('<%= full_image_path 'widget-frame.jpg'%>');
	padding-top: 5px;
	padding-left: 8px;
}

.ohfy-widget a {
	color: #FFFFFF;
	text-decoration: none;
	border: 0;
}

.ohfy-widget .date {
	text-align: center;
	width: 30px;
	height: 30px;
	float: left;
	font-size: 13px;
}

.ohfy-widget .date.bad {
	background-color: #FFFFFF;
}

.ohfy-widget .date.good {
	background-color: #A3D979;
}

.ohfy-widget .date.great {
	background-color: #66B132;
}

.ohfy-widget .date.unknown {
	
}
