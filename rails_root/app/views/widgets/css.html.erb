.ohfy-widget {
	width: 216px;
	height: 187px;
	font-family: cursive;
	background-image: url('<%= full_image_path 'widget-frame.png'%>');
	padding-top: 5px;
	padding-left: 5px;
}

.ohfy-widget .date {
	text-align: center;
	width: 30px;
	height: 30px;
	float: left;
	font-size: 13px;
	opacity: 0.65;
}

.ohfy-widget .date.bad {
	background-color: #FA0000;
}

.ohfy-widget .date.good {
	background-color: #ACDD00;
}

.ohfy-widget .date.great {
	background-color: #00E300;
}

.ohfy-widget .date.unknown {
	
}
